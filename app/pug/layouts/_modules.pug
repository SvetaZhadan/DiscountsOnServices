mixin m-log-in-popup 
  .m-log-in-popup(data-log-in-popup)
    .popup
      h2 Log in
      p New user? 
        a(href='#')(create-account) Create an account
      form
        +b-input('Email Address', 'name','Enter your e-mail')
        +b-input('Password','password','Enter your password', 'password')
        div 
          a(href='#') Forgot password?
          +b-button('blue') Log in
      
      .sign-with 
        hr
        p Or sign in with
        hr
      div.buttons__wrapper
        +b-login-with
          include ../../assets/images/icons/google.svg
        +b-login-with
          include ../../assets/images/icons/facebook.svg
        +b-login-with
          include ../../assets/images/icons/apple.svg
      p.protected-by Protected by reCAPTCHA and subject to the 
        a(href='#') Google Privacy Policy 
        | and 
        a(href='#') Terms of Service