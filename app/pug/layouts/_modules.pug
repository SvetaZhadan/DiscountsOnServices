mixin header
  header.header
    .header__wrapper.container
      a(href='#').header__logo 
        include ../../assets/images/logo.svg
        p DiscountsOnServices
      .header__content 
        nav 
          span.header__sub(data-toggle) Subscriptions
            span.arrow
              include ../../assets/images/actions/arrow-down-s-line.svg
          span.toggle__popup
            a(href="#") Netflix
            a(href="#") YouTube Premium
            a(href="#") Spotify
          li 
            a(href="#") FAQ
          li 
            a(href="#") Support
          li 
            a(href="#") About
        div 
          span(data-toggle)  EN
            sapn.arrow
              include ../../assets/images/actions/arrow-down-s-line.svg
          span.toggle__popup
            a(href="#") English
            a(href="#") Ukraine
            a(href="#") Russian
          span.socials
            +b-iconButton
              include ../../assets/images/icons/whatsapp-fill.svg
            +b-iconButton
              include ../../assets/images/icons/telegram-fill.svg

          +b-button Log in
      .header__burger(data-burger-menu)
        +b-iconButton 
          include ../../assets/images/actions/burger.svg
      .header__close(data-burger-menu)
        +b-iconButton 
          include ../../assets/images/actions/close-fill.svg

mixin footer 
  footer.footer 
    .footer__wrapper.container
      .footer__col
        .footer__logo 
          include ../../assets/images/logo.svg
          p DiscountsOnServices
        p.footer__text It's simple, fast and economical
      .footer__content
        .footer__content-wrapper
          div
            p Subscriptions
            ul 
              li 
                a(href="#") Netflix
              li 
                a(href="#") YouTube Premium
              li  
                a(href="#") Spotify        
          div
            p Site navigation
            ul 
              li 
                a(href="#") About
              li 
                a(href="#") FAQ
              li  
                a(href="#") Support
        div.footer__info
          span.socials
            +b-iconButton('--white')
              include ../../assets/images/icons/whatsapp-fill.svg
            +b-iconButton('--white')
              include ../../assets/images/icons/telegram-fill.svg
          span(data-toggle)  EN
            sapn.arrow
              include ../../assets/images/actions/arrow-down-s-line.svg
          span.toggle__popup
            a(href="#") English
            a(href="#") Ukraine
            a(href="#") Russian
    .footer__row.container
      p Privacy Policy
      p Copyright 2022 Â© All Rights Reserved
      p Developed by Svetlana

mixin m-baner 
  .m-baner
