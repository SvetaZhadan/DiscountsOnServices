mixin header
  header.header
    .header__wrapper.container
      a(href='home.html').header__logo 
        include ../../assets/images/logo.svg
        p DiscountsOnServices
      .header__content 
        nav 
          span.header__sub(data-toggle) Subscriptions
            span.arrow
              include ../../assets/images/actions/arrow-down-s-line.svg
          span.toggle__popup(data-platform-items)
            a(href="platform.html#0") Netflix
            a(href="platform.html#1") YouTube Premium
            a(href="platform.html#1") Spotify
          li 
            a(href="#howworks") How it works?
          li 
            a(href="#about") About
          li 
            a(href="#support") Support
        div 
          span(data-toggle)  EN
            sapn.arrow
              include ../../assets/images/actions/arrow-down-s-line.svg
          span.toggle__popup
            a(href="#") English
            a(href="#") Ukraine
            a(href="#") Russian
          span.socials
            +b-iconButton
              include ../../assets/images/icons/whatsapp-fill.svg
            +b-iconButton
              include ../../assets/images/icons/telegram-fill.svg
          +b-button('btn-log-in') Log in
      .header__burger(data-burger-menu)
        +b-iconButton 
          include ../../assets/images/actions/burger.svg
      .header__close(data-burger-menu)
        +b-iconButton 
          include ../../assets/images/actions/close-fill.svg
    +m-log-in-popup 

