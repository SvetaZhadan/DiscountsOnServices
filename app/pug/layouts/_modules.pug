mixin m-steps 
  .m-steps 
    +c-step('Step 1', 'Enter your account information','../../assets/images/Bell.svg')
    +c-step('Step 2', 'Select the desired subscription and plan','../../assets/images/Illustrations.svg')
    +c-step('Step 3', 'Pay your bill with PayPal','../../assets/images/Success.svg')

